{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "CommonJS",
    "allowJs": false,
    "jsx": "react", 
    "sourceMap": true,
    "outDir": "./",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
